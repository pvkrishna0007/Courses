<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <include
            android:id="@+id/toolbar_include"
            layout="@layout/layout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_office"
                android:layout_width="@dimen/course_img_width"
                android:layout_height="@dimen/course_img_height"
                android:src="@drawable/msoffice"

                style="@style/imageviewStyle"
                 />

            <TextView
                android:id="@+id/tv_office"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_office"
                android:text="Office"
               style="@style/textViewStyle"
                android:layout_centerInParent="true"

                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_html"
                android:layout_width="@dimen/course_img_width"
                android:layout_height="@dimen/course_img_height"
                android:src="@drawable/html_selector"
                style="@style/imageviewStyle"/>

            <TextView
                android:id="@+id/tv_html"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_html"
                android:text="Html"
                style="@style/textViewStyle"
                android:layout_centerInParent="true"

                />



        </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_bigdata"
                android:layout_width="@dimen/course_img_width"
                android:layout_height="@dimen/course_img_height"
                android:src="@drawable/bigdata_selector"
                style="@style/imageviewStyle" />

            <TextView
                android:id="@+id/tv_bigdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_bigdata"
                android:text="Big Data"
                style="@style/textViewStyle"
                android:gravity="center"
                android:layout_centerInParent="true"

                />



        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_ios"
                android:layout_width="@dimen/course_img_width"
                android:layout_height="@dimen/course_img_height"
                android:src="@drawable/ios_selecter"
                style="@style/imageviewStyle"/>

            <TextView
                android:id="@+id/tv_ios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_ios"
                android:text="ios"
                style="@style/textViewStyle"
                android:layout_centerInParent="true"

                />

        </RelativeLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_angulerjs"
                android:layout_width="@dimen/course_img_width"
                android:layout_height="@dimen/course_img_height"
                android:src="@drawable/angulerjs_selector"
                style="@style/imageviewStyle" />

            <TextView
                android:id="@+id/tv_angulerjs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_angulerjs"
                android:text="AngulerJS"
                style="@style/textViewStyle"
                android:layout_centerInParent="true"

                />



        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_android"
                android:layout_width="@dimen/course_img_width"
                android:layout_height="@dimen/course_img_height"
                android:src="@drawable/ic_android_color"
                style="@style/imageviewStyle" />

            <TextView
                android:id="@+id/tv_android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_android"
                android:text="Android"
                style="@style/textViewStyle"
                android:layout_centerInParent="true"

                />



        </RelativeLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_pmp"
                android:layout_width="@dimen/course_img_width"
                android:layout_height="@dimen/course_img_height"
                android:src="@drawable/pmp_selector"
                style="@style/imageviewStyle" />

            <TextView
                android:id="@+id/tv_pmp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_pmp"
                android:text="pmp"
                style="@style/textViewStyle"
                android:layout_centerInParent="true"

                />
        </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        </ScrollView>

    </LinearLayout>



</layout>